.hero__thirty
  color color-white
  font-family font-family-serif
  font-size 20rem // 320px
  // line-height 22.125 // 354px
  letter-spacing -2rem
  line-height 1
  margin -2rem 0 0 -2rem
  text-align center

.hero__year
  color color-white
  font-family font-family-serif
  font-size 6.625rem // 106px
  // line-height 7.635 // 122px
  line-height 1
  margin-top -2rem
  text-transform uppercase

.hero__reunion
  color color-white
  font-family font-family-serif
  font-size 4rem // 64px
  // line-height 4.625 // 74px
