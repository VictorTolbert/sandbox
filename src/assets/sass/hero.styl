  margin-bottom 0.5rem
  text-transform uppercase

.hero__right
  display flex
  flex-direction column
  height 100%
  justify-content flex-end
  width 1064px

.hero__main-body
  flex 1

.hero__buttons
  align-items flex-end
  display flex
  height 100%
  justify-content center
  padding-bottom 48px
  vertical-align middle

.hero__button
  align-items center
  background-color color-buddha-gold
  border none
  border-radius 0.25rem
  color color-white
  display flex
  font-size: 24px
  justify-content center
  height 64px
  margin-right 4rem
  text-align center
  text-transform uppercase
  vertical-align middle
  width 320px

.hero__navigation
  background-color color-fiord
  height 5rem // 80px
  ul
    align-items center
    color: color-white
    display: flex
    font-size 24px
    height: 100%
    justify-content: space-around
    text-transform: uppercase
